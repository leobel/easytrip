<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inspire_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.freelectron.leobel.easytrip.InspireMeActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/pins_recycler_view"
        tools:context="org.freelectron.leobel.easytrip.InspireMeActivity"
        tools:listitem="@layout/fragment_pin" />

    <FrameLayout android:id="@+id/empty_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>
